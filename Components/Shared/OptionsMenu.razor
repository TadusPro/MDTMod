                        @foreach (ContainerDisplayType type in Enum.GetValues(typeof(ContainerDisplayType)))
                        {
                            <option value="@type" selected="@(viewOptions.MaterialsDisplayType == type)">@type</option>
                        }
                    </select>
                </div>
